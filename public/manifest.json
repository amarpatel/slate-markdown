{
  "manifest_version": 2,
  "name": "Live Markdown",
  "version": "0.1",
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs"
  ],
  "browser_action": {
    "default_title": "Live Markdown",
    "default_popup": "index.html"
  },
  "background": {
    "script": "/static/js/main.js",
    "page": "index.html",
    "persistent": true
  }
}