{
  "manifest_version": 2,
  "name": "Live Markdown",
  "version": "0.1",
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["/static/js/main.js"]
    }
  ],
  "browser_action": {
    "default_title": "Live Markdown",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": [
      "/static/js/main.js"
    ],
    "persistent": true
  }
}